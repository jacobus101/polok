<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bank_statement_form_no_quick_create" model="ir.ui.view">
        <field name="name">account.bank.statement.form.no.quick.create</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form"/>
        <field name="arch" type="xml">
            <!-- Restringir creación rápida del diario -->
            <field name="journal_id" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True, 'no_open': True}</attribute>
            </field>

            <!-- Ocultar botón de agregar línea -->
            <xpath expr="//field[@name='line_ids']" position="before">
                <field name="user_has_accounting_rights" invisible="1"/>
            </xpath>

            <!-- Modificar el tree view de líneas -->
            <xpath expr="//field[@name='line_ids']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <!-- Ocultar completamente la creación de líneas -->
            <xpath expr="//notebook//page//field[@name='line_ids']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

            <!-- Ocultar el botón de agregar línea -->
            <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                <attribute name="create">0</attribute>
                <attribute name="edit">0</attribute>
                <attribute name="delete">0</attribute>
                <attribute name="editable">bottom</attribute>
            </xpath>

            <!-- Ocultar el botón de agregar línea en la vista tree embebida -->
            <xpath expr="//field[@name='line_ids']/tree" position="inside">
                <field name="user_has_accounting_rights" invisible="1"/>
            </xpath>

            <!-- Permitir acceso solo a usuarios con permisos de contabilidad -->
            <xpath expr="//field[@name='line_ids']" position="attributes">
                <attribute name="readonly" groups="account.group_account_user">0</attribute>
                <attribute name="options" groups="account.group_account_user">{'no_create': False}</attribute>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                <attribute name="create" groups="account.group_account_user">1</attribute>
                <attribute name="edit" groups="account.group_account_user">1</attribute>
                <attribute name="delete" groups="account.group_account_user">1</attribute>
            </xpath>

            <field name="journal_id" position="attributes">
                <attribute name="options" groups="account.group_account_user">{'no_create': False, 'no_create_edit': False, 'no_open': False}</attribute>
            </field>
        </field>
    </record>

    <!-- Vista tree base que permite crear extractos a todos -->
    <record id="view_bank_statement_tree_base" model="ir.ui.view">
        <field name="name">account.bank.statement.tree.base</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_tree"/>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="create">true</attribute>
                <attribute name="edit">true</attribute>
                <attribute name="delete">true</attribute>
            </tree>
        </field>
    </record>
</odoo> 