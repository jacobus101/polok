<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bank_statement_form_no_quick_create" model="ir.ui.view">
        <field name="name">account.bank.statement.form.no.quick.create</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </field>
            <xpath expr="//field[@name='line_ids']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                <attribute name="create">false</attribute>
                <attribute name="edit">false</attribute>
                <attribute name="delete">false</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']" position="attributes">
                <attribute name="readonly" groups="account.group_account_user">0</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                <attribute name="create" groups="account.group_account_user">true</attribute>
                <attribute name="edit" groups="account.group_account_user">true</attribute>
                <attribute name="delete" groups="account.group_account_user">true</attribute>
            </xpath>
            <field name="journal_id" position="attributes">
                <attribute name="options" groups="account.group_account_user">{'no_create': False, 'no_create_edit': False}</attribute>
            </field>
        </field>
    </record>
</odoo> 