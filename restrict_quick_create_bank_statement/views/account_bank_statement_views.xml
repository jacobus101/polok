<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bank_statement_form_no_quick_create" model="ir.ui.view">
        <field name="name">account.bank.statement.form.no.quick.create</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form"/>
        <field name="arch" type="xml">
            <!-- Restringir creación de líneas para usuarios sin permisos -->
            <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                <attribute name="create">0</attribute>
            </xpath>

            <!-- Permitir creación solo a usuarios con permisos contables -->
            <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                <attribute name="create" groups="account.group_account_user">1</attribute>
            </xpath>
        </field>
    </record>

    <!-- Vista tree base que permite crear extractos a todos -->
    <record id="view_bank_statement_tree_base" model="ir.ui.view">
        <field name="name">account.bank.statement.tree.base</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_tree"/>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="create">true</attribute>
                <attribute name="edit">true</attribute>
                <attribute name="delete">true</attribute>
            </tree>
        </field>
    </record>
</odoo> 