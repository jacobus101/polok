<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bank_statement_form_no_quick_create" model="ir.ui.view">
        <field name="name">account.bank.statement.form.no.quick.create</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree" position="inside">
                <field name="check_user_groups" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                <attribute name="create" attrs="{'readonly': [('check_user_groups', '=', False)]}">1</attribute>
            </xpath>
        </field>
    </record>
</odoo> 