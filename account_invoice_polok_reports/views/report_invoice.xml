<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="extexnal_layout_standard_polok" inherit_id="web.external_layout_standard_polok">
    <xpath expr="//div[@class='header']" position="replace">
      <div class="header" t-att-style="report_header_style">
        <div class="row">
            <div class="col-3 mb4">
                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;" alt="Logo"/>
            </div>
            <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
        </div>
        <div t-if="company.logo or company.report_header" class="row zero_min_height">
            <div class="col-12">
                <div style="border-bottom: 1px solid black;"/>
            </div>
        </div>
    </div>
    </xpath> 
  </template>
  <template id="report_invoice_document_polok" inherit_id="account.report_invoice_document">
      <xpath expr="//t[@t-set='address']" position="replace">
        <t t-set="address" t-if="not o.env.company.ei_enable">
          <address t-field="o.partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
          <div t-if="o.partner_id.vat" class="mt16">
              <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label"
                  id="inv_tax_id_label"/>
              <t t-else="">Tax ID</t>:
              <span t-field="o.partner_id.vat"/>
          </div>
        </t>
        <div class="container" t-if="o.env.company.ei_enable">
          <div class="row" style="font-size:11px;">
            <div class="col-4">
              <span t-field="company.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
              <span t-field="o.company_id.vat"/>
              Tipo de organizaci√≥n: <span t-field="o.company_id.type_organization_id"/>        
              Tipo de regimen: <span t-field="o.company_id.type_regime_id"/>
              Tipo de responsabilidad:
              <span t-field="o.company_id.type_liability_id"/>
              <br/>
              <span t-field="o.company_id.report_custom_text"/>
            </div>
            <div class="col-4">
            </div>
            <div class="col-4">
              <h4 t-if="o.move_type == 'out_invoice' or o.move_type == 'out_refund'">Cliente</h4>
                  <h4 t-if="o.move_type == 'in_invoice' or o.move_type == 'in_refund'">Proveedor</h4>
                  <div t-if="o.partner_id.vat" class="mt16">
                      <span t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'civil_registration'">
                          R.C.:
                      </span>
                      <span t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'id_card'">
                          T.I.:
                      </span>
                      <span t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'id_document'">
                          C.C.:
                      </span>
                      <span t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'national_citizen_id'">
                          C.C.:
                      </span>
                      <span t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'residence_document'">
                          T.E.:
                      </span>
                      <span t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'foreign_id_card'">
                          C.E.:
                      </span>
                      <span t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'rut'">
                          NIT:
                      </span>
                      <span t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'passport'">
                          PAS:
                      </span>
                      <span t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'external_id'">
                          D.I.E.:
                      </span>
                      <span t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'diplomatic_card'">
                          Tax ID:
                      </span>
                      <span t-field="o.partner_id.vat"/>
                  </div>
                    <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name", "phone", "email"], "no_marker": True}'/>
            </div>
          </div>
        </div>
      </xpath>
  </template>
</odoo>
