<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Stock Picking Form modification -->
        <record id="view_picking_form_inherit_hide_product_quick_create" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.hide.product.quick.create</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_quick_create': True, 'no_create_edit': True}</attribute>
                </xpath>
            </field>
        </record>

        <!-- Purchase Order Form modification -->
        <record id="view_purchase_order_form_inherit_hide_product_quick_create" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.hide.product.quick.create</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_quick_create': True, 'no_create_edit': True}</attribute>
                </xpath>
            </field>
        </record>

        <!-- Sales Order Form modification -->
        <record id="view_sale_order_form_inherit_hide_product_quick_create" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.hide.product.quick.create</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_quick_create': True, 'no_create_edit': True}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

