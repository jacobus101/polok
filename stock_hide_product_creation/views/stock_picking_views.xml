<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Modificar el campo product_id en el formulario de stock.move -->
        <record id="view_move_form_inherit_hide_product_quick_create" model="ir.ui.view">
            <field name="name">stock.move.form.inherit.hide.product.quick.create</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_quick_create': True, 'no_create_edit': True}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
