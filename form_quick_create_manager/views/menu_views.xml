<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acción de ventana -->
    <record id="action_form_quick_create_rule" model="ir.actions.act_window">
        <field name="name">Reglas de Creación Rápida</field>
        <field name="res_model">form.quick.create.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera regla de creación rápida
            </p>
            <p>
                Define reglas para controlar la creación rápida en los formularios.
            </p>
        </field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_form_quick_create_root"
        name="Creación Rápida"
        parent="base.menu_custom"
        sequence="100"/>

    <menuitem id="menu_form_quick_create_rule"
        name="Reglas de Creación Rápida"
        parent="menu_form_quick_create_root"
        action="action_form_quick_create_rule"
        sequence="1"/>
